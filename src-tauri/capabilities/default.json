{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-set-focus",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "launch-game",
          "cmd": "/bin/bash",
          "args": [
            "-c",
            {
              "validator": "^/home/ibour/Downloads/Games/[a-zA-Z0-9_\\-/\\.]+$"
            }
          ],
          "sidecar": false
        }
      ]
    },
    "shell:default"
  ]
}